<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wupitch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowDisablePreview">true</item>
<!--        <item name="android:windowBackground">@drawable/splash</item>-->
<!--        <item name="android:windowBackground">@color/main_orange</item>-->

<!--        <item name="android:windowBackground">@null</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/main_orange</item>
        <item name="colorSecondary">@color/gray03</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_orange</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>

    </style>

    <style name="DatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/main_orange</item>
        <item name="colorOnPrimary">@color/main_black</item>
        <item name="colorAccent">@color/main_orange</item>
        <item name="colorSurface">@color/white</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>

    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>



    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_region_bottom_sheet</item>
    </style>


    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="MyActivityTabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>