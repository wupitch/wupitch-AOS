<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_onboarding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="63dp"
        android:gravity="center"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:textColor="@color/black_onboarding_title"
        android:textSize="26sp"
        tools:text="대표 문구"
        android:includeFontPadding="false"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tv_onboarding_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/gray_onboarding_subtitle"
        android:textSize="14sp"
        android:includeFontPadding="false"
        android:layout_marginTop="4dp"
        tools:text="subtitle" />

    <ImageView
        android:id="@+id/iv_onboarding"
        android:layout_width="240dp"
        android:layout_height="400dp"
        android:src="@drawable/img_onbd_02"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>