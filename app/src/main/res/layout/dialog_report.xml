<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_report_dialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="280dp"
        android:layout_height="266dp"
        android:background="@drawable/background_report_dialog">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/report"
        android:fontFamily="@font/roboto_bold"
        android:textSize="14sp"
        android:textColor="@color/main_black"/>

    <EditText
        android:id="@+id/et_report"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:hint="@string/input_report"
        android:textSize="14sp"
        android:textColorHint="@color/gray03"
        android:textColor="@color/main_black"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_report"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/background_report_edittext"
        android:paddingVertical="15dp"
        android:paddingHorizontal="19dp"
        android:gravity="top|start"
        android:maxLength="45"
        android:textCursorDrawable="@drawable/cursor"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/et_report"
        app:layout_constraintEnd_toEndOf="@id/et_report"
        app:layout_constraintTop_toBottomOf="@id/et_report"
        android:layout_marginTop="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="28dp"
        android:background="@drawable/background_confirm_button"
        android:text="@string/confirmed"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textSize="14sp"
        android:stateListAnimator="@null"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>